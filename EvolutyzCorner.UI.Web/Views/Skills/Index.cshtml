    $(document).ready(function () {
        $("#Sk_isDeleted").val("False");
        $("#btnAddModel").click(function () {
            $("#btnAdd").show();
            $("#btnUpdate").hide();
            $("#headtitle").text("Add Skills");
        });
        $("#btnclose").click(function () {
            window.location.reload();
        });

        $("#btnAdd").on("click", function () {
            $('#myform').validate({
                rules: {
                    SkillTitle: {
                        required: true,

                    },
                    ShortDescription: {
                        required: true,
                        //  regx: /^[a-zA-Z]*$/
                    },
                    Sk_isDeleted: {
                        required: true,
                        // regx: /^[a-zA-Z]*$/
                    }
                },
                submitHandler: function (form) {
                    var skillTitle = $("#SkillTitle").val();
                    var Description = $("#ShortDescription").val();
                    var status = $("#Sk_isDeleted").val();
                    $.ajax({
                        type: "POST",
                        url: "/Skills/AddSkills",
                        data: {
                            skillTitle: skillTitle,
                            Description: Description,
                            status: status

                        },
                        cache: false,
                        success: function (data) {
                            //
                            // $("#resultarea").text(data);
                            if (data === "Skill Already Exists") {
                                $("#SkillTitle").addClass("validate_msg");
                            } else {
                                $("#SkillTitle").removeClass("validate_msg");

                                function explode() {
                                    alert(data);
                                }
                                setTimeout(explode, 15);

                                window.location.reload();
                            }


                        }
                    });

                }
            });


        });

        $("#btnUpdate").click(function () {
            $('#myform').validate({
                rules: {
                    SkillTitle: {
                        required: true,

                    },
                    ShortDescription: {
                        required: true,
                        //  regx: /^[a-zA-Z]*$/
                    },
                    Sk_isDeleted: {
                        required: true,
                        // regx: /^[a-zA-Z]*$/
                    },




                },
                submitHandler: function (form) {
                    var skillid = $("#SkillId").val();
                    var skillTitle = $("#SkillTitle").val();
                    var Description = $("#ShortDescription").val();
                    var status = $("#Sk_isDeleted").val();


                    $.ajax({
                        type: "POST",
                        url: "/Skills/UpdateSkills?id=" + skillid,
                        data: {
                            skillTitle: skillTitle,
                            Description: Description,
                            status: status

                        },
                        cache: false,
                        success: function (data) {
                            if (data === "Skill Already Exists") {
                                $("#SkillTitle").addClass("validate_msg");
                            } else {
                                $("#SkillTitle").removeClass("validate_msg");
                                function explode() {
                                    alert(data);
                                }
                                setTimeout(explode, 15);

                                window.location.reload();
                            }

                        }
                    });
                }
            });
        });

    });

</script>

<script type="text/javascript">
    function UnCheckStatus(id) {
        $.ajax({
            url: "/User/SkillChangeStatus",
            type: "POST",
            data: {
                'id': id,
                'status': true
            },

            //dataType: "json",
            success: function (data) {

                alert(data);
                window.location.reload();
            },
            complete: function () {
                $('#loading-image').attr("style", "display: none;");
            },
        });
    }
    function CheckStatus(id) {
        $.ajax({
            url: "/User/SkillChangeStatus",
            type: "POST",
            data: {
                'id': id,
                'status': false
            },

            //dataType: "json",
            success: function (data) {

                alert(data);
                window.location.reload();
            },
            complete: function () {
                $('#loading-image').attr("style", "display: none;");
            },
        });
    }
    $(document).ready(function () {
        $("#skills").addClass("active");
        $("#skills").siblings().removeClass("active");

         var permissions = '@ViewBag.a';

        if (permissions === "Read/Write")
        {
            $("#btnAddModel").show();
            $("#table").removeClass("actions");

        }
        else
        {
            $("#btnAddModel").hide();
            $("#table").addClass("actions");
         }
    });
</script>