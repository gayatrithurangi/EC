                    $("#UsT_UserType").val(UsT_UserType);
                    $("#UsT_UserTypeDescription").val(UsT_UserTypeDescription);
                    ///$("#UsT_isDeleted").val(UsT_isDeleted);

                    // if it is active set the ddl to active else in-active
                    if (UsT_isDeleted === true) {
                        $("#UsT_isDeleted").val("1");
                    } else {
                        $("#UsT_isDeleted").val("0");
                    }


                },
                error: function () {
                    //alert(Response.text);
                }
            });
    }

